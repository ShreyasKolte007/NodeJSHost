<%-include("navbar.ejs")%>

<div class="container-fluid bg-white p-4">
    <h1>Product List</h1>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped text-center">
                <tr>
                    <th>Action</th>
                    <th>Sr. No.</th>
                    <th>Product Name</th>
                    <th>Company</th>
                    <th>Label</th>
                    <th>Color</th>
                    <th>Price Range</th>
                </tr>
                <% product_info.map(function(val,i){ %>
                    <tr>
                        <td>
                            <a href="/admin/view_product/<%=val.product_id%>" class="btn btn-sm btn-success"><i class="fa-solid fa-eye"></i></a>
                            <a href="/admin/edit_product/<%=val.product_id%>" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                            <a href="/admin/delete_product/<%=val.product_id%>" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash"></i></a>
                        </td>
                        <td><%=i+1%></td>
                        <td><%=val.product_name%></td>
                        <td><%=val.product_company%></td>
                        <td><%=val.product_label%></td>
                        <td><%=val.product_color%></td>
                        <td>₹<%=val.price%> - ₹<%=val.product_duplicate_price%></td>
                    </tr>
                <% }) %>
            </table>
        </div>
    </div>
</div>
<%-include("footer.ejs")%>
