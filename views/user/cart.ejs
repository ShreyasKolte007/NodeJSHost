<%-include("navbar.ejs")%>
    <div class="container-fluid bg-white p-4">
        <div class="cart-page">
            <div class="row">
                <div class="col-md-12">
                    <div class="container1">
                        <h2>Shopping Cart</h2>
                        <table>
                            <thead>
                                <tr>
                                    <th>Image</th>
                                    <th>Product Name</th>
                                    <th>Size</th>
                                    <th>Qty</th>
                                    <th>Price</th>
                                    <th>Total</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                            <tbody>
                                <% var sum=0 %>
                                    <% cart.map(function(val,i){ %>
                                        <tr>
                                            <td><img src="/upload/<%=val.product_image1%>" class="product-img"></td>
                                            <td>
                                                <%=val.product_name%>
                                            </td>
                                            <td>
                                                <%=val.product_size%>
                                            </td>
                                            <td><button style="margin-right:10px; background-color:blue" onclick="decrease('<%=val.cart_id%>')">-</button><input type="number" min="1" class="qty-input"
                                                    value="<%=val.qty%>"><button style="margin-left:10px; background-color: blue;" onclick="increase('<%=val.cart_id%>')">+</button></td>
                                            <td>₹<%=val.product_price%>
                                            </td>
                                            <td>₹<%=val.product_price * val.qty%>
                                            </td>
                                            <td><a href="/cart_remove/<%=val.cart_id%>" class="remove-btn" style="color:red">Remove</a></td>
                                        </tr>
                                        <% sum +=(val.product_price * val.qty)%>
                                            <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
